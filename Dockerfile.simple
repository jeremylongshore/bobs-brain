# Simple Dockerfile for Bob Simple
FROM python:3.11-slim

WORKDIR /app

# Install only essential dependencies
RUN pip install --no-cache-dir \
    flask \
    google-genai \
    google-cloud-bigquery \
    gunicorn

# Copy only the simple version
COPY src/bob_simple.py .

# Use gunicorn for production
CMD exec gunicorn --bind :$PORT --workers 1 --threads 2 --timeout 0 bob_simple:app
