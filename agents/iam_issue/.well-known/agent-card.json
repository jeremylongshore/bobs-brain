      "input_schema": {
        "type": "object",
        "required": [
          "title",
          "description"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "steps_to_reproduce": {
            "type": "string"
          },
          "expected_behavior": {
            "type": "string"
          },
          "actual_behavior": {
            "type": "string"
          },
