  #       primary_language: "TypeScript"

# ==============================================================================
# GITHUB INTEGRATION SETTINGS
# ==============================================================================

github:
  # TEMPLATE: GitHub token configuration
  # Set via environment variable: GITHUB_TOKEN
  # Requires: repo read access (for analysis)
  # Optional: repo write access (for issue creation)

  # Default GitHub API settings
  api_url: "https://api.github.com"

  # Rate limiting
  requests_per_hour: 5000  # GitHub API limit

  # Issue creation settings
  issue_creation:
    enabled: false  # TEMPLATE: Set to true when ready for issue creation
    default_labels:
      - "iam-department"
      - "automated"
    default_assignees: []  # TEMPLATE: Add default assignees

# ==============================================================================
# REPOSITORY ANALYSIS SETTINGS
# ==============================================================================

analysis:
  # File patterns to include
  include_patterns:
    - "**/*.py"
    - "**/*.ts"
    - "**/*.tsx"
    - "**/*.js"
    - "**/*.jsx"
    # TEMPLATE: Add your file patterns

  # File patterns to exclude
  exclude_patterns:
    - "**/node_modules/**"
    - "**/venv/**"
    - "**/.venv/**"
    - "**/dist/**"
    - "**/build/**"
    - "**/__pycache__/**"
    - "**/.pytest_cache/**"
    # TEMPLATE: Add your exclusions

  # Directories to prioritize
  priority_directories:
    - "agents/"
    - "src/"
    - "lib/"
    # TEMPLATE: Add your priority directories
