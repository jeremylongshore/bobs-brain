# {{PRODUCT_DISPLAY_NAME}} Repository Registry
#
# TEMPLATE: Configure this file with your product's repositories.
#
# This registry maps repository names/hints to actual GitHub repositories
# for the IAM department to analyze.

# ==============================================================================
# TEMPLATE INSTRUCTIONS
# ==============================================================================
#
# 1. Replace {{REPO_OWNER}} with your GitHub organization or username
#    Example: "jeremylongshore", "mycompany", "yourorg"
#
# 2. Add your product's repositories below
#
# 3. For monorepos, use the `monorepo_root` field
#
# 4. Set `primary: true` for your main repository
#
# ==============================================================================

repositories:
  # TEMPLATE: Main product repository
  - name: "{{PRODUCT_NAME}}"
    full_name: "{{REPO_OWNER}}/{{PRODUCT_NAME}}"
    url: "https://github.com/{{REPO_OWNER}}/{{PRODUCT_NAME}}"
    primary: true
    description: "{{PRODUCT_DISPLAY_NAME}} main repository"
    primary_language: "Python"  # Or your primary language
    frameworks:
      - "Google ADK"
      - "FastAPI"  # TEMPLATE: Add your frameworks
    key_directories:
      agents: "agents/"
      service: "service/"
      scripts: "scripts/"
      tests: "tests/"
      docs: "000-docs/"

  # TEMPLATE: Add additional repositories as needed
  # Example:
  # - name: "{{PRODUCT_NAME}}-frontend"
  #   full_name: "{{REPO_OWNER}}/{{PRODUCT_NAME}}-frontend"
  #   url: "https://github.com/{{REPO_OWNER}}/{{PRODUCT_NAME}}-frontend"
  #   primary: false
  #   description: "Frontend application"
  #   primary_language: "TypeScript"
  #   frameworks:
  #     - "React"
  #     - "Next.js"

# ==============================================================================
# MONOREPO CONFIGURATION (if applicable)
# ==============================================================================

# TEMPLATE: If using a monorepo, configure subproject paths
monorepos:
