  # - name: "{{PRODUCT_NAME}}-monorepo"
  #   full_name: "{{REPO_OWNER}}/{{PRODUCT_NAME}}-monorepo"
  #   url: "https://github.com/{{REPO_OWNER}}/{{PRODUCT_NAME}}-monorepo"
