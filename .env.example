# Bob's Brain v5.0 Configuration

# Required - API Authentication
BB_API_KEY=change-me-in-production

# Google Cloud Platform (required for full functionality)
GCP_PROJECT=your-gcp-project-id
GCP_LOCATION=us-central1

# Neo4j Graph Database (optional)
NEO4J_URI=bolt://your-neo4j-host:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Slack Integration (optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Circle of Life Configuration (optional)
BB_CONFIDENCE_MIN=0.6
BB_COL_BATCH=50
BB_COL_COOLDOWN=60

# Cloud Run Environment (set automatically in production)
RUNNING_IN_CLOUD_RUN=false
PORT=8080